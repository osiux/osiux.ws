	<section class="prose md:prose-xl max-w-full! dark:text-gray-100">
		<Image class="mx-auto w-3/4!" src={Eduardo} alt="Eduardo Reveles" />
		<p class="text-center text-sm! mb-3">
			Photo by{' '}
			<a
				href="https://unsplash.com/@melspadawan?utm_source=unsplash&utm_medium=referral&utm_content=creditCopyText"
			>
				Melissa Castillo
			</a>{' '}
